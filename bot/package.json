{
  "name": "werewolf-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for managing Werewolf games across multiple servers",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "node test/test-bot.js",
    "test:sqlite": "node test/test-sqlite.js",
    "test:alive-mentions": "node test/test-alive-mentions.js",
    "test:mod-detection": "node test/test-mod-detection.js",
    "alive-status": "node scripts/alive-mentions-status.js",
    "db:refresh": "node -e \"require('dotenv').config(); const { execSync } = require('child_process'); execSync('psql -h ' + process.env.PG_HOST + ' -p ' + process.env.PG_PORT + ' -U ' + process.env.PG_USER + ' -d ' + process.env.PG_DATABASE + ' -f database_setup.sql', { stdio: 'inherit' });\"",
    "setup-opensearch": "node scripts/setup-opensearch.js",
    "test-opensearch": "node scripts/test-opensearch-connection.js",
    "search-messages": "node scripts/search-messages.js",
    "migrate-archives": "node scripts/migrate-local-archives.js"
  },
  "keywords": [
    "discord",
    "bot",
    "werewolf",
    "game",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.451.0",
    "@aws-sdk/credential-provider-node": "^3.451.0",
    "@opensearch-project/opensearch": "^2.4.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "moment-timezone": "^0.6.0",
    "node-cron": "^3.0.3",
    "openai": "^5.12.0",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
