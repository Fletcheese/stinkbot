{
  "name": "stinkbot-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Stinkbot Discord bot, frontend, and database migrations",
  "private": true,
  "workspaces": [
    "bot",
    "frontend",
    "database"
  ],
  "scripts": {
    "bot:start": "npm run start --workspace=bot",
    "bot:dev": "npm run dev --workspace=bot",
    "bot:test": "npm run test --workspace=bot",
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "db:migrate": "npm run migrate --workspace=database",
    "db:seed": "npm run seed --workspace=database"
  },
  "keywords": [
    "discord",
    "bot",
    "werewolf",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "npm": "^10.0.0"
  }
}